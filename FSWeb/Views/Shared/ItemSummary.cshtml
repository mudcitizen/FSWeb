@model ItemSummaryVM

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            <a class="btn btn-block btn-default btn-primary"
               asp-action="@RoutingConstants.Action.Display"
               asp-controller="@RoutingConstants.Controller.Item"
               asp-route-id="@Model.ItemId">
                @Model.ItemName
            </a>


        </h4>
    </div>
    <div class="card-text p-1 ">
        <small style="margin-right: 10px">Finds <span class="badge badge-primary">@Model.FindCount</span></small>
        <span style="float: right;margin-left: 10px">
            <small>Last - @Model.LastFind.ToString("d") </small>
        </span>
    </div>
</div>