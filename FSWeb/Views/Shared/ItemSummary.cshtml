@model ItemSummaryVM
<head>
    <style>
        .floatright {
            float:right;
        }
    </style>
</head>

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.ItemName
            <span class="floatright" style="margin-left: 30px">
                @Model.CategoryName
            </span>
        </h4>
    </div>
    <div class="card-text p-1 ">
        <small>Finds - @Model.FindCount </small>
        <span class="floatright">
            <small>Last - @Model.LastFind.ToString("d") </small>
        </span>
    </div>
</div>